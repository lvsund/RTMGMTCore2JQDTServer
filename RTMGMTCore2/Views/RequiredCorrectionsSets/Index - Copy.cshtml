@model IEnumerable<RTMGMTCore2.Models.RequiredCorrectionsSet>

@{
    ViewBag.Title = "Index";
}

<h2>Required Corrections</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    @Html.ActionLink("Test Your Corrections", "TestYourCorrections") |@Html.ActionLink("Clear Corrections", "ClearCorrections")|@Html.ActionLink("Export Corrections", "ExportCorrections")
</p>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title"> Required Corrections</h1>
            </div>
            <div class="panel-body">
                <table id="RequiredCorrections-data-table"
                       class="table table-striped table-bordered"
                       style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ReportingId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReportsToId)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReportingId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReportsToId)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script type="text/javascript">
        $(document).ready(function () {

            $('#RequiredCorrections-data-table').DataTable();

        });
    </script>
    <script src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.4/css/jquery.dataTables.min.css">

}